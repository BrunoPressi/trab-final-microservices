generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id Int @default(autoincrement()) @id
  cpf String @unique
  nomeCompleto String
  email String @unique
  telefone String
  enderecos Endereco[]
}

model Endereco {
  id Int @default(autoincrement()) @id
  cep String
  cidade String
  estado String
  rua String @unique
  bairro String
  numero Int @unique
  complemento String?
  telefone String
  cliente Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  clienteId Int
}